<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/key_item__lock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            tools:text="Test Lock" />

        <TextView
            android:id="@+id/key_item__issuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:text="@string/key_item__issued_by" />

        <TextView
            android:id="@+id/key_item__access_restriction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/key_item__access_unrestricted" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_item__trigger_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:text="@string/key_item__trigger_button_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/key_item__cancel_trigger_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:text="@string/key_item__cancel_trigger_button_text" />

</LinearLayout>